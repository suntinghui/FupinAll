<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/common_background"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            style="@style/middle_color_FFFFFF_text"
            android:textColor="@drawable/bg_selector_white"
            android:focusable="true"
            android:gravity="center"
            android:text="搜索"/>

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            style="@style/middle_color_FFFFFF_text"
            android:textColor="@drawable/bg_selector_white"
            android:layout_toRightOf="@id/tv_search"
            android:focusable="true"
            android:gravity="center"
            android:text="我的"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/middle_color_FFFFFF_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:gravity="center"
            android:text="山西扶贫"/>

<!--
        <app.com.tvrecyclerview.TvRecyclerView
            android:id="@+id/rcv_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/tv_me"
            android:layout_toRightOf="@id/tv_search"
            app:focusDrawable="@drawable/default_focus"/>
-->

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_data"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"/>

    <FrameLayout
        android:id="@+id/fl_fragment"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

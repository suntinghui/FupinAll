<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_background">

    <include
        layout="@layout/common_title2"/>

    <View
        style="@style/common_line_h" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_playRecord"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="播放记录"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_history"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>
        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="我的收藏"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_collection"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>
        <TextView
            android:id="@+id/tv_cacheFile"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="下载历史"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_download"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>

        <TextView
            android:id="@+id/tv_localFile"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="硬盘资源"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_local_res"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>

        <TextView
            android:id="@+id/tv_downloadOssRes"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="资源下载"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_share"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>

        <TextView
            android:id="@+id/tv_fileShare"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="数据共享"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_me_share"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:visibility="gone"
            android:textSize="@dimen/dimen_middle"/>

        <TextView
            android:id="@+id/tv_appDownload"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="APP下载"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:drawableTop="@mipmap/icon_app_download"
            android:textColor="@drawable/bg_selector_white"
            android:gravity="center"
            android:background="@drawable/bg_me_focus_effective"
            android:textSize="@dimen/dimen_middle"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="退出登录"
        android:focusable="true"
        android:textColor="@drawable/bg_selector_white"
        android:background="@drawable/bg_view_focus_primary"
        android:textSize="@dimen/dimen_middle"/>

</LinearLayout>

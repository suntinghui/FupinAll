<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="160dp"
            android:background="@drawable/bg_prompt_dialog"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="提示内容？"
                    style="@style/big_color_000000_style" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/common_cancel"
                            android:textColor="@drawable/bg_selector_black"
                            android:textSize="@dimen/dimen_middle"/>

                        <View
                            android:id="@+id/spilt_line"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ebebeb"/>

                        <TextView
                            android:id="@+id/tv_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/common_comfirm"
                            android:textColor="@drawable/bg_selector_black"
                            android:textSize="@dimen/dimen_middle"/>
                </LinearLayout>

        </LinearLayout>

</LinearLayout>
